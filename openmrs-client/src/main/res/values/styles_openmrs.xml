<resources>
    <style name="DropDownListView.Openmrs" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_openmrs</item>
    </style>

    <style name="ActionBarTabStyle.Openmrs" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_openmrs</item>
        <item name="android:textColor">@color/white</item>
    </style>
	
    <style name="DropDownNav.Openmrs" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_openmrs</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_openmrs</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_openmrs</item>
    </style>
    
    <style name="ProgressBar.Openmrs" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_openmrs</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/neutral_green</item>
    </style>

</resources>