<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:padding="@dimen/text_size_large">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:text="@string/legal_consent"
                android:textSize="@dimen/dashboard_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/translucent_50_percent"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashboard_icon_height_width"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dashboard_icon_height_width"
            android:layout_margin="@dimen/fab_bottom_margin_4"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/mic" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/play_pause"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dashboard_icon_height_width"
            android:layout_margin="@dimen/fab_bottom_margin_4"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/play" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dashboard_icon_height_width"
            android:layout_margin="@dimen/fab_bottom_margin_4"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/save" />

    </LinearLayout>

</RelativeLayout>