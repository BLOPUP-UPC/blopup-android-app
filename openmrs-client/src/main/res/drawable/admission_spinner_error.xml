<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="#fff" />
            <stroke
                android:width="1dp"
                android:color="@color/error_red"/>
