<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.upc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- BLOPUP -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" tools:node="remove"/>

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:name="edu.upc.openmrs.application.OpenMRS"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_blopup"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Openmrs">
        <activity
            android:name="edu.upc.openmrs.activities.community.contact.AboutActivity"
            android:label="@string/action_about_activity"
            android:theme="@style/AppThemeOrig" />
        <activity
            android:name="edu.upc.openmrs.activities.introduction.SplashActivity"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="buildVersion"
            android:value="0" />

        <receiver
            android:name="edu.upc.openmrs.api.SyncStateReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="edu.upc.openmrs.intent.action.SYNC_PATIENTS" />
            </intent-filter>
        </receiver>

        <activity
            android:name="edu.upc.openmrs.activities.dashboard.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeOrig" />
        <activity
            android:name="edu.upc.openmrs.activities.introduction.IntroActivity"
            android:label="Introduction"
            android:theme="@style/AppTheme" />
        <activity
            android:name="edu.upc.openmrs.activities.syncedpatients.SyncedPatientsActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/action_synced_patients"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeOrig">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.upc.openmrs.activities.dashboard.DashboardActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.upc.openmrs.activities.login.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="edu.upc.openmrs.activities.settings.SettingsActivity"
            android:configChanges="locale|orientation"
            android:label="@string/action_settings"
            android:launchMode="singleTop"
            android:parentActivityName="edu.upc.openmrs.activities.dashboard.DashboardActivity"
            android:theme="@style/AppThemeOrig" />
        <activity
            android:name="edu.upc.openmrs.activities.patientdashboard.PatientDashboardActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeOrig">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.upc.openmrs.activities.syncedpatients.SyncedPatientsActivity" />
        </activity>
        <activity
            android:name="edu.upc.openmrs.activities.visitdashboard.VisitDashboardActivity"
            android:label="@string/visit_dashboard_label"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeOrig"></activity>
        <activity
            android:name="edu.upc.openmrs.activities.addeditpatient.AddEditPatientActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/action_register_patient"
            android:parentActivityName="edu.upc.openmrs.activities.addeditpatient.AddEditPatientActivity"
            android:theme="@style/AppThemeOrig">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.upc.openmrs.activities.addeditpatient.AddEditPatientActivity" />
        </activity>

        <service
            android:name="edu.upc.openmrs.services.PatientService"
            android:enabled="true" />
        <service
            android:name=".sdk.library.api.services.EncounterService"
            android:enabled="true" />
        <service
            android:name="edu.upc.openmrs.services.FormListService"
            android:enabled="true" />
        <service
            android:name="edu.upc.openmrs.services.AuthenticateCheckService"
            android:enabled="true" />

        <activity
            android:name="edu.upc.openmrs.activities.lastviewedpatients.LastViewedPatientsActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/action_download_patients"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeOrig">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.upc.openmrs.activities.dashboard.DashboardActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name="edu.upc.openmrs.activities.matchingpatients.MatchingPatientsActivity" />
        <activity
            android:name="edu.upc.openmrs.activities.logs.LogsActivity"
            android:label="@string/title_activity_logs"
            android:parentActivityName=".openmrs.activities.settings.SettingsActivity"
            android:theme="@style/AppThemeOrig" />
        <activity
            android:name="edu.upc.openmrs.activities.patientdashboard.charts.ChartsViewActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="edu.upc.openmrs.activities.patientdashboard.PatientDashboardActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="edu.upc.openmrs.activities.community.contact.ContactUsActivity"
            android:label="@string/contact_us"
            android:theme="@style/AppThemeOrig" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="edu.upc.blopup.bloodpressure.readBloodPressureMeasurement.ReadBloodPressureActivity"
            android:exported="false" />
        <activity
            android:name="edu.upc.blopup.scale.readScaleMeasurement.ReadWeightActivity"
            android:exported="false" />
        <activity
            android:name="edu.upc.blopup.vitalsform.VitalsFormActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.upc.openmrs.activities.visitdashboard.VisitDashboardActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GOOGLE_PLACE_API_KEY}" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>